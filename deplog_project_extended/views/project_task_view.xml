<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record model="ir.ui.view" id="project_task_view_form">
            <field name="name">project.task.view.form.inherit.concat_project</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2" />
            <field name="arch" type="xml">
                <xpath expr="//field[(@name='name')]" position="before">
                     <field name="is_project" attrs="{'invisible':1}"/>
                </xpath>

                <xpath expr="//field[(@name='name')]" position="before">
                    <field name="other_exp" attrs="{'invisible': [('is_project','=', False)]}"/>
                    <field name="is_create" attrs="{'invisible':1}"/>
                </xpath>

                <xpath expr="//field[(@name='name')]" position="attributes">
                    <attribute name="attrs">{'invisible':[('is_project','=',True)]}</attribute>
                </xpath> 
                               
            </field>
        </record>

